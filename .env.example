# Tableau MCP Configuration
MCP_URL=<currently uses a proxy setup in heroku to do this>
MCP_AUTH_TOKEN=your_mcp_auth_token_here

# LLM Gateway Configuration
LLM_GATEWAY_URL=<currently uses an internal SF Gateway managed LLM>
ANTHROPIC_AUTH_TOKEN=your_anthropic_auth_token_here
LLM_MODEL=claude-sonnet-4-5-20250929
LLM_MAX_TOKENS=1024

# Default Datasource Configuration (configurable, not hard-coded)
# These are defaults that can be overridden at runtime
DEFAULT_DATASOURCE_LUID=your_default_datasource_luid_here
DEFAULT_DATASOURCE_NAME=your_default_datasource_name_here

# Default Workbook Configuration (configurable, not hard-coded)
DEFAULT_WORKBOOK_ID=your_default_workbook_id_here
DEFAULT_WORKBOOK_NAME=your_default_workbook_name_here

# Default View Configuration (configurable, not hard-coded)
DEFAULT_VIEW_ID=your_default_view_id_here
DEFAULT_VIEW_NAME=your_default_view_name_here

# Server Configuration
PORT=4001
NODE_ENV=development

# Heroku Configuration
# Heroku will automatically use PORT env var

# Tool result truncation limits (optional)
# Maximum size for tool result content in bytes (default: 102400 = 100KB)
MAX_TOOL_RESULT_SIZE_BYTES=102400

# Maximum number of rows to include in query results (default: 100)
MAX_QUERY_RESULT_ROWS=100
